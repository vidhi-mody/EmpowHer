<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="/img/favicon.png" />
    <title>Empower</title>
    <!--     Fonts and icons     -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"
      rel="stylesheet"
    />
    <link
      href="https://use.fontawesome.com/releases/v5.0.6/css/all.css"
      rel="stylesheet"
    />
    <!-- Nucleo Icons -->
    <link href="/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="/css/font-awesome.css" rel="stylesheet" />
    <link href="/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="/css/argon.min.css" rel="stylesheet" />
  </head>

  <body class="login-page">
    <!-- Navbar -->
    <%- include("../shared/sidebar.ejs") -%>
    <!-- End Navbar -->
    <!-- Main content -->
    <div class="main-content" id="panel">
      <!-- Topnav -->
      <%- include("../shared/topnav") -%>
      <!-- Header -->
      <!-- Header -->
      <div class="header bg-primary pb-6">
        <div class="container-fluid">
          <div class="header-body">
            <div class="row align-items-center py-4">
              <div class="col-lg-6 col-7">
                <h6 class="h2 text-white d-inline-block mb-0">View Recipes</h6>
                <nav
                  aria-label="breadcrumb"
                  class="d-none d-md-inline-block ml-md-4"
                >
                  <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item">
                      <a href="/"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Recipes
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Page content -->

      <div class="container-fluid mt--6">
        <div class="row">
          <!-- Recipes -->
          <% for(const recipe of recipes) { %>
          <div class="col-md-4" data-id="<%= recipe.id %>" id="post-<%= recipe.id %>">
            <div class="card">
              <img
                class="card-img-top"
                src="<%= recipe.image %>"
                alt="Card image cap"
                width="100%";
                height="300px";
                style="object-fit: cover;"
              />
              <div class="card-body">
                <p class="card-text"><%= recipe.title %></p>
                <h5 class="card-title">Extra ingredients needed: <%= recipe.missedIngredientCount %> </h5>
                <button type="submit" class="btn btn-danger">
                    <span class="btn-inner--text"><%= recipe.likes %></span>
                    <span class="btn-inner--icon"></span>
                        <i class="ni ni-favourite-28"></i
                    ></span>
                </button>
                <a href="/recipes/recipe/<%- recipe.id %>">
                    <button type="submit" class="btn btn-secondary">
                    <span class="btn-inner--icon"></span>
                        <i class="ni ni-paper-diploma"></i
                    ></span>
                    <span class="btn-inner--text">View Reciepe</span>
                    </button>
                </a>
              </div>
            </div>
          </div>
          <% } %>
          <!-- Recipes -->
        </div>
      </div>

    </div>
    <!--   Core JS Files   -->
    <%- include("../shared/scripts") -%>

  </body>
</html>

