<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="/img/favicon.png" />
    <title>Empower</title>
    <!--     Fonts and icons     -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"
      rel="stylesheet"
    />
    <link
      href="https://use.fontawesome.com/releases/v5.0.6/css/all.css"
      rel="stylesheet"
    />
    <!-- Nucleo Icons -->
    <link href="/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="/css/font-awesome.css" rel="stylesheet" />
    <link href="/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="/css/argon.min.css" rel="stylesheet" />
  </head>

  <body class="login-page">
    <!-- Navbar -->
    <%- include("../shared/sidebar.ejs") -%>
    <!-- End Navbar -->
    <!-- Main content -->
    <div class="main-content" id="panel">
      <!-- Topnav -->
      <%- include("../shared/topnav.ejs") -%>
      <!-- Header -->
      <!-- Header -->
      <div class="header bg-primary pb-6">
        <div class="container-fluid">
          <div class="header-body">
            <div class="row align-items-center py-4">
              <div class="col-lg-6 col-7">
                <h6 class="h2 text-white d-inline-block mb-0">Chatroom</h6>
                <nav
                  aria-label="breadcrumb"
                  class="d-none d-md-inline-block ml-md-4"
                >
                  <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item">
                      <a href="/"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">Messages</a></li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Page content -->
      <div class="container-fluid mt-3">
        <div class="row w-100 mx-auto">
          <div class="col-md">
            <div class="table-responsive">
              <div>
                <table class="table align-items-center table-light">
                  <tbody class="list">
                    <% for(const u of users) { %> <% if(u.username !==
                    user.username ) { %>
                    <tr>
                      <th scope="row">
                        <div class="media align-items-center">
                          <a
                            href="/user/<%= u.username %>"
                            class="avatar rounded-circle mr-3"
                          >
                            <img
                              alt="Image placeholder"
                              src="<%= u.profilePicture %>"
                            />
                          </a>
                          <div class="media-body">
                            <a href="/user/<%= u.username %>">
                              <span class="name mb-0 text-sm"
                                ><%= u.name %></span
                              >
                            </a>
                          </div>
                        </div>
                      </th>
                      <td>
                        <a
                          href="/user/<%= u.username %>"
                          class="btn btn-success"
                          >View Profile</a
                        >
                      </td>
                      <td>
                        <a
                          href="/chat/<%= u.username %>"
                          class="btn btn-primary"
                          >Message</a
                        >
                      </td>
                    </tr>
                    <% } %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--   Core JS Files   -->
    <%- include("../shared/scripts") -%>
  </body>
</html>
